                        <!-- Modal -->
                        <div class="modal fade" id="usersModal" data-bs-backdrop="static" data-bs-keyboard="false"
                            tabindex="-1" aria-labelledby="usersModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="usersModalLabel">Users Form</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="netId">Net Id</span>
                                                <input type="text" class="form-control" placeholder="Net Id"
                                                    aria-label="Net Id" aria-describedby="netId">
                                            </div>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="firstAndLastName">First and last
                                                    name</span>
                                                <input type="text" aria-label="First name" class="form-control">
                                                <input type="text" aria-label="Last name" class="form-control">
                                            </div>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="userEmail">User Email</span>
                                                <input type="email" class="form-control" placeholder="userEmail"
                                                    aria-label="User Email" aria-describedby="userEmail">
                                            </div>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="userPassword">User Password</span>
                                                <input type="email" class="form-control" placeholder="User Password"
                                                    aria-label="User Password" aria-describedby="userPassword">
                                            </div>
                                            <div class="input-group mb-3">
                                                <label class="input-group-text" for="inputGroupSelect01">Role</label>
                                                <select class="form-select" id="userRole">
                                                    <option selected>Choose...</option>
                                                    <option value="1">Admin</option>
                                                    <option value="2">User</option>
                                                </select>
                                            </div>
                                            <div class="input-group mb-3">
                                                <label class="input-group-text"
                                                    for="inputGroupSelect01">Lecturer</label>
                                                <select class="form-select" id="inputGroupSelect01">
                                                    <option selected>Choose...</option>
                                                    <option value="1">True</option>
                                                    <option value="2">False</option>
                                                </select>
                                            </div>
                                            <div class="input-group mb-3">
                                                <label class="input-group-text" for="inputGroupSelect01">Student</label>
                                                <select class="form-select" id="inputGroupSelect01">
                                                    <option selected>Choose...</option>
                                                    <option value="1">True</option>
                                                    <option value="2">False</option>
                                                </select>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </li>

                    <li class="nav-item p-2  ">
                        <p data-bs-toggle="modal" data-bs-target="#coursesModal">Add Courses</p>
                        <!-- Modal pop up for courses form-->
                        <div class="modal fade" id="coursesModal" data-bs-backdrop="static" data-bs-keyboard="false"
                            tabindex="-1" aria-labelledby="coursesModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="coursesModalLabel">Courses Form</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <!-- Courses Form -->
                                        <form>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="courseCode">Course Code</span>
                                                <input type="text" class="form-control" placeholder="Course Code"
                                                    aria-label="Course Code" aria-describedby="courseCode">
                                            </div>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="courseName">Course Name</span>
                                                <input type="text" class="form-control" placeholder="Course Name"
                                                    aria-label="Course Name" aria-describedby="courseName">
                                            </div>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="courseDesc">Course Description</span>
                                                <input type="text" class="form-control" placeholder="Course Description"
                                                    aria-label="Course Description" aria-describedby="courseDesc">
                                            </div>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </form>
                                        <!-- End of Form -->
                                    </div>
                                    <!-- End of Modal body div containg form -->
                                </div>
                                </form>
                            </div>
                    </li>
                    <!-- Logout icon link -->
                    <li class="nav-item p-2 ">
                        <a class="nav-link" href="/">
                            <img src="https://img.icons8.com/ios-filled/2x/exit.png" alt="logout" width="30"
                                height="30">
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- End of Nav Bar -->
    <h1>Welcome Admin</h1>
    <!-- Grid layout for the admin main content -->
    <div class="main-container">
        <!-- View Users row -->
        <div class="row mt-5 mt-3">
            <!--View Users Column-->
            <div class="col">
                <!-- Div to show collapsable list of users -->
                <p class="viewUsersLink mt-3 mb-3" data-bs-toggle="collapse" data-bs-target="#collapseExample"
                    aria-expanded="false" aria-controls="collapseExample">View Users
                    <img id="right"
                        src="https://img.icons8.com/external-dreamstale-lineal-dreamstale/2x/external-down-arrows-dreamstale-lineal-dreamstale.png"
                        alt="dropdown" width="30" height="27">
                </p>
                <!-- collapsable list of users -->
                <div class="collapse" id="collapseExample">
                    <!-- card body for users list -->
                    <div class="card card-body">
                        <!-- table list of users -->
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">User Name</th>
                                    <th scope="col">User Email</th>
                                    <th scope="col">Courses Taught</th>
                                    <th scope="col">Courses Learning</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>John Doe</td>
                                    <td>Doe@gmail.com</td>
                                    <td>APT 3065, APT 2030</td>
                                    <td>IST 1020, IST 3040</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Sam WHite</td>
                                    <td>Sam@gmail.com</td>
                                    <td>APT 1025, APT 1030</td>
                                    <td>IST 1040, IST 3045</td>
                                </tr>
                            </tbody>
                        </table>
                        <!-- Table End -->
                    </div>
                    <!-- End of div class Body -->
                </div>
                <!-- End of collapsable div -->
            </div>
            <!-- End of users column div -->
        </div>
        <!-- End of users column row  -->


        <!-- second row with view courses list -->
        <div class="row mt-5 mt-3">
            <!-- view courses column and collapse button-->
            <div class="col">
                <p class="viewCoursesLink mt-3 mb-3 " data-bs-toggle="collapse" data-bs-target="#collapseExample"
                    aria-expanded="false" aria-controls="collapseExample">View Courses
                    <img id="right"
                        src="https://img.icons8.com/external-dreamstale-lineal-dreamstale/2x/external-down-arrows-dreamstale-lineal-dreamstale.png"
                        alt="dropdown" width="30" height="27">
                </p>

                <!-- Collapsable list of courses -->
                <div class="collapse" id="collapseExample">
                    <div class="card card-body  ">
                        <!-- view courses table -->
                        <table class="table">
                            <!-- table headers -->
                            <thead>
                                <tr>
                                    <th scope="col">Course Code</th>
                                    <th scope="col">Course Name</th>
                                    <th scope="col">Course Description</th>
                                </tr>
                            </thead>
                            <!-- table row values -->
                            <tbody>
                                <tr>
                                    <th scope="row">APT 3065</th>
                                    <td>Midterm Project</td>
